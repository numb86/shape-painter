{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "skipLibCheck": true, // Cannot be deleted due to @types/styled-components support. ref https://github.com/DefinitelyTyped/DefinitelyTyped/issues/33015
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["./*"],
      "@shared/*": ["./shared/*"],
      "@svg/*": ["./svg/*"],
      "@tree/*": ["./tree/*"],
      "@clientServer/*": ["./clientServer/*"]
    }
  },
  "include": [
    "src"
  ]
}
